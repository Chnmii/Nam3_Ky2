<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".Edit">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Số Báo Danh"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/edit_sbd"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:hint="Nhập số báo danh"
        android:padding="5dp"
        android:textSize="20dp" />
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Họ tên"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/edit_ho_ten"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:hint="Nhập họ tên"
        android:padding="5dp"
        android:textSize="20dp" />
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Điểm Toán"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/edit_toan"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:hint="Nhập điểm toán"
        android:padding="5dp"
        android:textSize="20dp" />
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Điểm Lý"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/edit_ly"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:hint="Nhập điểm lý"
        android:padding="5dp"
        android:textSize="20dp" />
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Điểm Hóa"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/edit_hoa"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:hint="Nhập điểm hóa"
        android:padding="5dp"
        android:textSize="20dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnedit"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:text="Sửa" />

        <Button
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:id="@+id/btngoback"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Quay Về"/>
    </LinearLayout>


</LinearLayout>