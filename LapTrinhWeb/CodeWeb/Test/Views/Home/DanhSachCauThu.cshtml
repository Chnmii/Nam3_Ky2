@using Test.Models;
@using X.PagedList.Mvc.Core;
@model X.PagedList.IPagedList<Cauthu>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "DanhSachCauThu";
    Layout = "~/Views/Shared/_LayoutBookStore.cshtml";
}

<h3>DanhSachCauThu</h3>
<hr />
<br />
<br />
<br />
<p>
    <a asp-action="ThemCauThuMoi">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Họ và tên
            </th>
            <th>
                Ngày sinh
            </th>
            <th>
                Vị trí
            </th>
            <th>
                Quốc tịch
            </th>
            <th>
                Số áo
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.HoVaTen)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ngaysinh)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ViTri)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.QuocTich)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SoAo)
                </td>
                
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CauThuId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.CauThuId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.CauThuId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="product__pagination">
    @Html.PagedListPager(Model, page=>Url.Action("Danhsachcauthu", new {page=page}))
</div>
