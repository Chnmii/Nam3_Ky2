    <script type="text/javascript" src="../Layout/js/boxOver.js"></script>
</head>
<body>
    <div id="main_container">
        @await Html.PartialAsync("PartialHeader")
        <div id="main_content">
            <div id="menu_tab">
                <ul class="menu">
                    <li><a href="#" class="nav"> Home </a></li>
                    <li class="divider"></li>
                    <li><a href="#" class="nav">Products</a></li>
                    <li class="divider"></li>
                    <li><a href="#" class="nav">Specials</a></li>
