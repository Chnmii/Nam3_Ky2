@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_LayoutHotel.cshtml";
}

@model List<SanPham>
@foreach (var item in Model)
{
    <div class="col-md-6 col-lg-4 mb-5">
        <div class="hotel-room text-center">
            <a href="#" class="d-block mb-0 thumbnail"><img src="@Url.Content("Images/" + item.AnhDaiDien)" alt="Image" class="img-fluid"></a>
            <div class="hotel-room-body">
                <h3 class="heading mb-0"><a href="#">@item.TenSanPham</a></h3>
                <strong class="price">@item.DonGiaBanNhoNhat</strong>
                <a asp-action="SuaSanPham" asp-route-masp="@item.MaSanPham">Edit</a>
            </div>
        </div>
    </div>
}

