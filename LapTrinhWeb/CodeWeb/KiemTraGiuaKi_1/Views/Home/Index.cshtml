@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_LayoutLodge.cshtml";
}
@model List<TDanhMucSp>
@foreach(var item in Model)
{
    <div class="container">
        <div class="heading_container">
            <h2>
                Our Jewellery Price
            </h2>
        </div>
        <div class="price_container">
            <div class="box">
                <div class="name">
                    <h6>
                        @item.TenSp
                    </h6>
                </div>
                <div class="img-box">
                    <img src="@Url.Content("../Images/" + @item.AnhDaiDien)" alt="">
                </div>
                <div class="detail-box">
                    <h5>
                        $<span>@item.GiaLonNhat</span>
                    </h5>
                    <a href="">
                        Buy Now
                    </a>
                </div>
            </div>

        </div>
        <div class="d-flex justify-content-center">
            <a href="" class="price_btn">
                See More
            </a>
        </div>
    </div>

}

